<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar"
        />
            <TextView
                android:id="@+id/tvTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/contact_select_select_tips"
                android:visibility="gone"/>

            <com.yxst.epic.unifyplatform.view.horizontallistview.HorizontalListView
                android:id="@+id/listContactSelect"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:divider="@null"
                android:fadingEdgeLength="0dp"
                android:requiresFadingEdge="none"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                widget:dividerWidth="0dp" />

        <!-- <fragment
            android:name="com.yxtech.epic.im.fragment.ContactSelectTopFragment_"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_contact_select_h"
            android:id="@+id/fragment_contact_select_top"/> -->

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BEBEBE" />

        <FrameLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


</LinearLayout>