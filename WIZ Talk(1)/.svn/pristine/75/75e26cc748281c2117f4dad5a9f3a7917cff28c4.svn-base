<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="48dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:id="@+id/contacthead_upper"
        android:layout_height="0dp"
        android:layout_weight="10">
        <TextView
            android:id="@+id/contacthead_caption"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textColor="@color/listcaptioncolor"
            android:text="意见意见意"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/contacthead_updown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unopem"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/listcaptioncolor"
        android:id="@+id/contacthead_liner"
        android:layout_below="@id/contacthead_upper"
        />
</LinearLayout>