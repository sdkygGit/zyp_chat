            android:layout_height="16.0dip"
            android:minWidth="16.0dip"
            android:background="@drawable/list_newmessage2"
            android:textColor="#ffffffff"
            android:textSize="10.0sp"
            android:gravity="center"
            android:text="20"/>


</LinearLayout>