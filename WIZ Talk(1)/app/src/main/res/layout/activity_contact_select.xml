<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BBB"/>

    <com.wiz.dev.wiztalk.view.horizontallistview.HorizontalListView
        android:id="@+id/listContactSelect"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:divider="@null"
        android:fadingEdgeLength="0dp"
        android:requiresFadingEdge="none"
        widget:dividerWidth="0dp" />

    <!-- <fragment
        android:name="com.yxtech.epic.im.fragment.ContactSelectTopFragment_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_contact_select_h"
        android:id="@+id/fragment_contact_select_top"/> -->


    <FrameLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>