<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/spacing_vertical" 
    android:paddingLeft="@dimen/spacing_horizontal"
    android:paddingRight="@dimen/spacing_horizontal"
    android:background="@drawable/list_selector">

    

 	<ImageView
	    android:id="@+id/iv_icon"
        android:layout_width="@dimen/icon_size_bigger"
        android:layout_height="@dimen/icon_size_bigger"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/spacing_horizontal"
        android:src="@drawable/ic_default_qun_mini"
	    />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="tv_name"
        android:textSize="15.0sp" 
        android:textColor="@color/item_app_context_file"/>


	
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
       	android:paddingRight="@dimen/spacing_horizontal"
       >
       
        <TextView
	        android:id="@+id/tv_unred"
	        android:layout_width="wrap_content"
	        android:minWidth="16dp"
	        android:layout_height="16dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/list_newmessage2"
	        android:textSize="10sp"
	        android:textColor="#ffffffff"
            android:gravity="center"
	        android:text="0"
	       	android:visibility="invisible"
	        />

      <!--<ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/abc_ic_ab_front_holo_light"
            android:visibility="visible" /> -->

    </RelativeLayout>

	<View
		android:id="@+id/viewDivider"
		style="@style/divider"
		/>
</RelativeLayout>