<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:textSize="16sp"
        android:textColor="#333333"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_item_edit"
        xmlns:android_custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="60dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recent_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/wizapp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="WIZ Talk"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:alpha="0.87"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="极速查看，分享"
                    android:textColor="#BBB"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

   <View 
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:background="#909090"/>

   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button 
           android:id="@+id/cancleBtn"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:text="取消"
           android:textSize="16sp"
           android:layout_weight="1"
           android:textColor="#008ee8"
           android:background="@drawable/dialog_left_btn_bg"/>
       <View 
           android:layout_width="1px"
           android:layout_height="match_parent"
           android:background="#909090"/>
       <Button 
           android:id="@+id/okBtn"
           android:layout_width="0dp"
           android:layout_height="45dp"
           android:text="发送"
           android:textSize="16sp"
           android:textColor="#008ee8"
           android:background="@drawable/dialog_right_btn_bg"
           android:layout_weight="1"/>
   </LinearLayout>
</LinearLayout>
