<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:minHeight="60dp">

    <LinearLayout
        android:id="@+id/asdlayout_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recent_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_default_app_mini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:alpha="0.87"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="fs"
                android:textColor="#333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:alpha="0.87"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="fsfdsfsfsf"
                android:textColor="@drawable/recent_message_text_color_selector"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="1px"
        android:layout_height="40dp"
        android:background="#BBB"
        />
    <RelativeLayout
        android:id="@+id/asdlayout_right"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="60dp">
        <ImageView
            android:id="@+id/plugin_imageView"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/item_selector"
            android:src="@mipmap/msg" />

        <com.wiz.dev.wiztalk.view.RoundProgress
            android:id="@+id/roundProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android_custom:progressTextColor="@color/circleBule"
            android_custom:progressTextSize="12sp"
            android_custom:roundColor="#eeeeee"
            android_custom:roundProgressColor="@color/circleBule"
            android_custom:roundWidth="2dp" />

        <TextView
            android:id="@+id/app_recent_unread"
            android:layout_width="16dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/list_newmessage2"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:textSize="10.0dip"
            android:visibility="invisible"
            android:text="0"/>
    </RelativeLayout>
</LinearLayout>